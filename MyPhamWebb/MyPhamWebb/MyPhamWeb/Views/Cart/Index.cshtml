@model List<MyPhamWeb.Models.CartModel>
@{
    ViewBag.Title = "Index";
}


<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Cart</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->


@if (Model.Count > 0)
{
    <div style="background-color:palegreen" class="untree_co-section before-footer-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-12">

                    <div class="site-blocks-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="product-thumbnail">Image</th>
                                    <th class="product-name">Product</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-total">Total</th>
                                    <th class="product-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @using (Html.BeginForm("UpdateCart", "Cart"))
                                        {
                                            <td class="product-thumbnail">
                                                <img src="~/Content/images/@item.Product.img" alt="Image" class="img-fluid">
                                            </td>
                                            <input name="id" type="hidden" class="h5 text-black" value="@item.Product.id" />
                                            <td class="product-name">
                                                <h2 class="h5 text-black">@item.Product.name</h2>
                                            </td>
                                            if (Session["role"] != null && Session["Username"] != null)
                                            {
                                                if (Session["role"].ToString().Equals("1"))
                                                {
                                                    <td>@item.Product.pricefordistributors.GetValueOrDefault(0)</td>
                                                }
                                                else
                                                {
                                                    <td>@item.Product.price.GetValueOrDefault(0)</td>
                                                }
                                            }
                                            <td>


                                                <div class="input-group mb-3 d-flex align-items-center quantity-container" style="max-width: 90%;">

                                                    <div class="input-group-prepend" style="background-color: #00ff00 !important;border-radius:50%; ">
                                                        <button class="btn btn-outline-black decrease" style="color:white;" type="button">&minus;</button>
                                                    </div>
                                                    <input name="quantity" value="@item.Quantity" style="border-radius: 50px 50px ;" type="number" class="form-control text-center quantity-amount" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">

                                                    <div class="input-group-append" style="background-color: #00ff00 !important;border-radius:50%;">
                                                        <button class="btn btn-outline-black increase" style="color:white" type="button">&plus;</button>
                                                    </div>
                                                    <div style="padding:2px">
                                                        <input style=" background-color: #00ff00 !important;border-radius:90%;color:white" type="submit" value="update" />
                                                    </div>


                                                </div>

                                            </td>
                                            if (Session["role"] != null && Session["Username"] != null)
                                            {
                                                if (Session["role"].ToString().Equals("1"))
                                                {
                                                    <td>@(@item.Product.pricefordistributors.GetValueOrDefault(0) * @item.Quantity)</td>
                                                }
                                                else
                                                {
                                                    <td>@(@item.Product.price.GetValueOrDefault(0) * @item.Quantity)</td>
                                                }
                                            }


                                            
                                            <td><a href="~/Cart/DeleteCart/?ProductID=@item.Product.id" class="btn btn-black btn-sm">X</a></td>
                                        }
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="row mb-5">
                        <div class="col-md-6">
                                <a href="~/Home"> <button  style="background-color: #00ff00" class="btn btn-outline-black btn-sm btn-block">Continue Shopping</button></a>
</div>
                    </div>
                </div>
                <div class="col-md-6 pl-5">
                    <div class="row justify-content-end">
                        <div class="col-md-7">
                            <div class="row">
                                <div class="col-md-12 text-right border-bottom mb-5">
                                    <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                                </div>
                            </div>
                            <div class="row mb-3">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-6">
                                        <span class="text-black">@item.Product.name X @item.Quantity</span>
                                    </div>
                                    if (Session["role"] != null && Session["Username"] != null)
                                    {
                                        if (Session["role"].ToString().Equals("1"))
                                        {
                                            <div class="col-md-6 text-right">
                                                <strong class="text-black">@(@item.Product.pricefordistributors.GetValueOrDefault(0) * @item.Quantity)</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-6 text-right">
                                                <strong class="text-black">@(@item.Product.price.GetValueOrDefault(0) * @item.Quantity)</strong>
                                            </div>
                                        }
                                    }

                                }
                            </div>

                            <div class="row mb-5">
                                <div class="col-md-6">
                                    <span class="text-black">Total</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@ViewBag.Cart</strong>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <a href="~/Cart/Check"><button style="background-color: #00ff00" class="btn btn-black btn-lg py-3 btn-block ">Proceed To Checkout</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div style="background-color:palegreen" class="untree_co-section before-footer-section">
        <h1 style="background-color:palegreen">No products in the cart</h1>
        </div>
}








